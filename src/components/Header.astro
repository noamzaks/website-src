---
export interface Props {
  title: string
}

const { title } = Astro.props
---

<header class="header">
  <a href="/">
    <img src="/favicon.ico" height="60px" />
  </a>
  <h3>Noam Zaks</h3>
  <div class="fill"></div>
  <div class="end">
    <a href="https://github.com/noamzaks">
      <i class="fa-brands fa-github"></i>
    </a>
  </div>
</header>

<style>
  .header {
    flex: none;
    display: flex;
    align-items: center;
    width: 100%;
    height: 75px;
    background-color: var(--real-accent);
    color: white;
  }

  .header > a {
    margin-right: 10px;
  }

  .header > :first-child {
    margin-right: 20px;
    margin-left: 10px;
  }

  .header > .end {
    font-size: 24px;
    margin-right: 10px;
  }

  .header > .end * {
    color: white;
  }

  .header > .fill {
    flex-grow: 1;
  }
</style>
